<div class='city_hero_image' style="<%= "background-image: url(#{@city.photo})" %>"></div>
<div class='city_show_nav'>
  <h2 class= 'city_show_name'><%= @city.name %></h2>
  <%= link_to "add new post", "/cities/#{@city.slug}/posts/new", class: "waves-effect waves-light btn-large" %>
</div>

<% @posts.each do |post| %>
<a href=<%= "/cities/#{post.city.slug}/posts/#{post.id}" %>>
  <div class='city_show_posts_container'>
    <% if post.photo %>
      <%= image_tag(post.photo, alt: "Post photo", class: "post_image") %>
    <% end %>
    <div class='city_show_post_info'>
      <p class= 'city_show_post_link'><strong><%= post.title %></strong></p>
      <p class="city_show_post_content"><%= truncate(post.content, :length => 1000) %></p>
      <p class="post_author"><small><%= "Posted by: #{post.user.email} " %>
      <%= timeago_tag post.created_at, :nojs => true %></small></p>
      <%= social_share_button_tag(@city.id) %>
    </div>
  </div>
</a>
<% end %>

<div class="city_show_button_container">
  <%= link_to "Edit This City", "/cities/#{@city.id}/edit", class: "edit_city_button waves-effect waves-light btn-large" %>
</div>
